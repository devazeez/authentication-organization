{
    "version": 2,
    "builds": [
      {
        "src": "./src/index.ts",
        "use": "@vercel/node"
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/src/index.ts"
      }
    ],
    "env": {
      "NODE_ENV": "production",
      "PORT": "3000"
    },
    "functions": {
      "api/*.js": {
        "maxDuration": 20
      }
    }
  }
